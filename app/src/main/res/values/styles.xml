<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ootd_orange</item>
        <item name="colorPrimaryDark">@color/ootd_orange</item>
    </style>

    <!-- Main activity theme. -->
    <style name="OOTDTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.OOTD.NoTitle</item>
    </style>

    <style name="ActionBar.Solid.OOTD.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_ootd_logo_white</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <style name="ItemListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

</resources>
