<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/border_selected" /> <!-- pressed -->
    <item android:state_selected="true"
        android:drawable="@drawable/border_selected" /> <!-- selected -->
    <item android:state_activated="true"
        android:drawable="@drawable/border_selected" /> <!-- selected -->
    <item android:state_checked="true"
        android:drawable="@drawable/border_selected" /> <!-- checked -->
    <item android:state_last="true"
        android:drawable="@drawable/border_selected" /> <!-- last -->
    <item android:drawable="@drawable/border" /> <!-- default -->
</selector>